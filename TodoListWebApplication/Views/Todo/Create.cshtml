@model TodoViewModels

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center mb-4">Create New Todo</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Todo Name</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Todo Description</label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Deadline" class="form-label">Todo's Deadline</label>
                <input asp-for="@Model.Deadline" class="form-control" type="datetime-local" />
                <span asp-validation-for="@Model.Deadline" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Categories" class="form-label">Category</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="@Model.IsCompleted" class="form-check-input" />
                <label asp-for="@Model.IsCompleted" class="form-check-label">Mark as Completed</label>
                <span asp-validation-for="@Model.IsCompleted" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Create Todo" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>
